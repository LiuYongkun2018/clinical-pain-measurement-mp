/* components/cognitive-step/index.wxss */
.cognitive-step-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  min-height: 100vh; /* 确保在手机上有足够高度 */
  padding: 40rpx 16rpx 0 16rpx;
  box-sizing: border-box;
  background: #f8f9fa;
}

/* 进度条样式 */
.progress-container {
  flex-shrink: 0; /* 不收缩 */
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.progress-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-align: center;
}

/* 进度条左右布局 */
.progress-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007aff 0%, #0056d3 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 600;
  flex-shrink: 0;
  min-width: 60rpx;
  text-align: right;
}

/* 内容容器 */
.content-container {
  flex: 1; /* 占据剩余空间 */
  width: 728rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 40rpx;
  /* scroll-view 特有样式 */
  height: 0; /* 配合flex: 1 使用 */
  min-height: 400rpx; /* 增加最小高度，确保在手机上可见 */
  max-height: 80vh; /* 设置最大高度，避免超出屏幕 */
  overflow: hidden; /* 确保滚动正常工作 */
}

/* 内容项 */
.content-item {
  width: 100% !important;
  display: flex;
  margin-bottom: 32rpx;
  position: relative;
}

.content-item:last-child {
  margin-bottom: 0;
}

/* 指示器 */
.item-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  position: relative;
}

.indicator-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.title-dot {
  background: #007aff;
  border: 4rpx solid #007aff;
}

.sub-dot {
  background: #6c757d;
  border: 4rpx solid #6c757d;
}

.completed .title-dot,
.completed .sub-dot {
  background: #28a745;
  border-color: #28a745;
}

.active .title-dot {
  background: #007aff;
  border-color: #007aff;
  animation: pulse 2s infinite;
}

.active .sub-dot {
  background: #6c757d;
  border-color: #6c757d;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.indicator-line {
  width: 4rpx;
  height: 40rpx;
  background: #e9ecef;
  margin-top: 8rpx;
}

.completed .indicator-line {
  background: #28a745;
}

/* 内容区域 */
.item-content {
  flex: 1;
  padding-top: 8rpx;
}

.item-text {
  line-height: 1.6;
  word-break: break-all;
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056d3 100%);
  color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #495057;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #6c757d;
}

.active .title-text {
  background: linear-gradient(135deg, #007aff 0%, #0056d3 100%);
  cursor: pointer;
  transition: all 0.3s ease;
}

.active .sub-text {
  background: #f0f8ff;
  border-left-color: #007aff;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* 点击提示 */
.click-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  margin-bottom: 20rpx; /* 适当的底部margin */
  padding: 12rpx 24rpx;
  background: #007aff;
  border-radius: 24rpx;
  animation: bounce 2s infinite;
}

.hint-text {
  font-size: 24rpx;
  color: #ffffff;
  margin-right: 8rpx;
}

.hint-arrow {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

@keyframes bounce {
  0%,
  20%,
  50%,
  80%,
  100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8rpx);
  }
  60% {
    transform: translateY(-4rpx);
  }
}

/* 完成弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

.modal-container {
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: scaleIn 0.3s ease-out;
}

.modal-content {
  padding: 48rpx 32rpx 32rpx 32rpx;
  text-align: center;
}

.modal-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: bounce 0.6s ease-out 0.3s both;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.modal-progress {
  margin-bottom: 40rpx;
}

.modal-progress-text {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.modal-progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.modal-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #28a745 0%, #20c997 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #666666;
}

.modal-btn.secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.modal-btn.primary {
  background: linear-gradient(135deg, #007AFF 0%, #5856d6 100%);
  color: #ffffff;
}

.modal-btn.primary:active {
  background: linear-gradient(135deg, #0056b3 0%, #4c4bc7 100%);
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -10rpx, 0);
  }
  70% {
    transform: translate3d(0, -5rpx, 0);
  }
  90% {
    transform: translate3d(0, -2rpx, 0);
  }
}
