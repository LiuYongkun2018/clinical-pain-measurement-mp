/* pages/analysis/index.wxss */
.container {
  padding: 0 16rpx;
  box-sizing: border-box;
  width: 100vw;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 确保scroll-view可以正常工作 */
scroll-view.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 98rpx; /* 留出tabBar空间 */
}
.cognitive-step-container {
  width: 100%;
}

.form-header {
  text-align: center;
  margin: 40rpx 0 50rpx 0;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.form-subtitle {
  display: block;
  font-size: 30rpx;
  color: #7f8c8d;
  font-weight: 400;
}

/* 视频部分样式 */
.video-section {
  /* 统一与 .guide-section 一致的宽度与外观 */
  margin: 0 0 32rpx 0; /* 移除左右外边距，保持与其它卡片一致的底部间距 */
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  border: 1rpx solid #f1f3f4; /* 与其它卡片一致 */
}

.video-header {
  padding: 40rpx 30rpx 30rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.video-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.video-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

.video-container {
  padding: 32rpx; /* 与 .guide-section 的左右内边距 32rpx 对齐 */
  background: #ffffff;
}

.therapy-video {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.guide-container {
  width: 100%;
}

.guide-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f1f3f4;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
}

.content-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.content-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #007AFF;
  transition: all 0.3s ease;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.5;
}

.process-steps {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.5;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.notice-dot {
  width: 12rpx;
  height: 12rpx;
  background: #007AFF;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 16rpx;
}

.notice-text {
  font-size: 30rpx;
  color: #495057;
  line-height: 1.6;
  flex: 1;
}

/* CCBT 疼痛疗法样式 */
.ccbt-intro {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #007AFF;
}

.intro-text {
  font-size: 30rpx;
  color: #495057;
  line-height: 1.6;
  font-weight: 500;
}

.ccbt-points {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.point-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #28a745;
}

.point-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.point-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: #ffffff;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.point-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  flex: 1;
}

.point-content {
  padding-left: 68rpx;
}

.comparison,
.feature-list {
  margin-bottom: 16rpx;
}

.comparison:last-child,
.feature-list:last-child {
  margin-bottom: 0;
}

.comparison-label,
.feature-label {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 600;
  color: #007AFF;
  margin-right: 12rpx;
  min-width: 120rpx;
}

.comparison-text,
.feature-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.comparison {
  background: rgba(0, 122, 255, 0.05);
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.feature-list {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.feature-list:last-child {
  border-bottom: none;
}
