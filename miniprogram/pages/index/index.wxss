/* 页面容器 */
.dashboard-container {
  padding: 24rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  min-height: 100vh;
}

/* 欢迎区域 */
.welcome-section {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.welcome-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.welcome-date {
  font-size: 24rpx;
  color: #666;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 状态卡片 */
.status-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.status-card {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.status-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.15);
}

.pain-level-card {
  flex-direction: column;
  align-items: stretch;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.card-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1677ff;
}

.pain-scale {
  width: 100%;
}

.scale-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.scale-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a, #faad14, #ff4d4f);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.scale-label {
  font-size: 20rpx;
  color: #999;
  display: block;
  text-align: center;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.card-content {
  flex: 1;
}

.card-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #1677ff;
  display: block;
  margin-bottom: 4rpx;
}

.card-label {
  font-size: 24rpx;
  color: #666;
}

/* 今日任务 */
.today-tasks, .pain-chart {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.task-item:active {
  background: rgba(22, 119, 255, 0.05);
}

.task-item.completed {
  opacity: 0.6;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: #999;
}

.task-checkbox {
  margin-right: 16rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #1677ff;
  border-color: #1677ff;
}

.checkmark {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
  margin-bottom: 4rpx;
  display: block;
}

.task-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.task-icon {
  font-size: 32rpx;
  margin-left: 16rpx;
}

/* 疼痛趋势图表 */
.chart-container {
  height: 400rpx;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 快速操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-button {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .status-cards {
    flex-direction: row;
    gap: 16rpx;
  }
  
  .status-card {
    flex: 1;
  }
  
  .pain-level-card {
    flex: 2;
  }
}
