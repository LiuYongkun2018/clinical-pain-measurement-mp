.quality-item.selected .quality-text {
  color: #1677ff !important;
  font-weight: 700;
  transform: scale(1.02);
}

/* 情绪量表 */
.emotion-scale {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.emotion-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.emotion-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  width: 120rpx;
}

.emotion-slider {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}

.emotion-slider slider {
  flex: 1;
  margin-right: 16rpx;
}

.emotion-value {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: 600;
  width: 40rpx;
  text-align: center;
}

/* 提交区域 */
.submit-section {
  padding: 32rpx 20rpx 60rpx;
  text-align: center;
}

.submit-btn {
  background: linear-gradient(135deg, #1677ff, #1890ff);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.3);
  border: none;
  width: 100%;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.4);
}

.submit-btn[disabled] {
  background: #d9d9d9;
  color: #999;
  box-shadow: none;
  transform: none;
}

.submit-note {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 16rpx;
  display: block;
}
