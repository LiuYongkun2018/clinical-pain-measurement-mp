/* 页面容器 */
.assessment-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 评估区块 */
.assessment-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* VAS疼痛量表 */
.vas-scale {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.scale-container {
  position: relative;
  width: 100%;
  margin-bottom: 32rpx;
}

.scale-track {
  position: relative;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin: 40rpx 0;
}

.scale-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a, #faad14, #ff4d4f);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.scale-handle {
  position: absolute;
  top: -16rpx;
  width: 44rpx;
  height: 44rpx;
  background: #1677ff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
  transform: translateX(-50%);
  z-index: 2;
  cursor: grab;
}

.scale-handle:active {
  cursor: grabbing;
  transform: translateX(-50%) scale(1.1);
}

.scale-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.scale-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.scale-descriptions {
  display: flex;
  justify-content: space-between;
}

.scale-desc {
  font-size: 22rpx;
  color: #999;
}

.pain-level-display {
  text-align: center;
  padding: 24rpx;
  background: rgba(22, 119, 255, 0.05);
  border-radius: 16rpx;
}

.pain-number {
  font-size: 72rpx;
  font-weight: 700;
  color: #1677ff;
  display: block;
  margin-bottom: 8rpx;
}

.pain-description {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 身体部位选择 */
.body-map {
  width: 100%;
}

.body-areas {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.body-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.body-area:hover {
  border-color: #d1d1d1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.body-area:active {
  transform: translateY(1rpx);
}

.body-area.selected {
  border-color: #1677ff !important;
  background: rgba(22, 119, 255, 0.12) !important;
  box-shadow: 0 6rpx 20rpx rgba(22, 119, 255, 0.25) !important;
  transform: scale(1.05);
}

.body-area.selected::before {
  content: '✓';
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  color: #1677ff;
  font-size: 24rpx;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  animation: checkmark-appear 0.3s ease-out;
}

@keyframes checkmark-appear {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.area-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.body-area.selected .area-icon {
  transform: scale(1.15);
  filter: brightness(1.1);
}

.area-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.2;
}

.body-area.selected .area-name {
  color: #1677ff !important;
  font-weight: 700;
  transform: translateY(-1rpx);
}

/* 持续时间选项 */
.duration-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 疼痛持续时间网格布局 */
.duration-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 8rpx;
}

.duration-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 12rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 88rpx;
  text-align: center;
}

.duration-item:hover {
  border-color: #d1d1d1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.duration-item:active {
  transform: translateY(1rpx);
}

.duration-item.selected {
  border-color: #1677ff !important;
  background: rgba(22, 119, 255, 0.12) !important;
  box-shadow: 0 6rpx 20rpx rgba(22, 119, 255, 0.25) !important;
  transform: scale(1.05);
}

.duration-item.selected::before {
  content: '✓';
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #1677ff;
  font-size: 22rpx;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  animation: checkmark-appear 0.3s ease-out;
}

.duration-text {
  font-size: 24rpx;
  color: #333;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.3;
  font-weight: 500;
  text-align: center;
  word-wrap: break-word;
  padding: 0 4rpx;
}

.duration-item.selected .duration-text {
  color: #1677ff !important;
  font-weight: 700;
  transform: translateY(-1rpx);
}

.option-item {
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.option-item:hover {
  border-color: #d1d1d1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.option-item:active {
  transform: translateY(1rpx);
}

.option-item.selected {
  border-color: #1677ff !important;
  background: rgba(22, 119, 255, 0.12) !important;
  box-shadow: 0 6rpx 20rpx rgba(22, 119, 255, 0.25) !important;
  transform: scale(1.02);
}

.option-item.selected::before {
  content: '✓';
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #1677ff;
  font-size: 28rpx;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  animation: checkmark-appear 0.3s ease-out;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  flex: 1;
  line-height: 1.3;
}

.option-item.selected .option-text {
  color: #1677ff !important;
  font-weight: 700;
  padding-right: 50rpx; /* 为对勾留出空间 */
}

/* 触发因素 */
