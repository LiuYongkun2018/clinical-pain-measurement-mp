}

.factor-item.selected .factor-icon {
  transform: scale(1.15);
  filter: brightness(1.1);
}

.factor-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.3;
}

.factor-item.selected .factor-text {
  color: #1677ff !important;
  font-weight: 700;
  transform: translateX(2rpx);
