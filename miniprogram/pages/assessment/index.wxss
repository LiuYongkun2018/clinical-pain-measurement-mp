/* 页面容器 */
.assessment-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 评估区块 */
.assessment-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* VAS疼痛量表 */
.vas-scale {
  width: 100%;
}

.scale-container {
  position: relative;
  width: 100%;
  margin-bottom: 32rpx;
}

.scale-track {
  position: relative;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin: 40rpx 0;
}

.scale-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a, #faad14, #ff4d4f);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.scale-handle {
  position: absolute;
  top: -16rpx;
  width: 44rpx;
  height: 44rpx;
  background: #1677ff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
  transform: translateX(-50%);
  z-index: 2;
  cursor: grab;
}

.scale-handle:active {
  cursor: grabbing;
  transform: translateX(-50%) scale(1.1);
}

.scale-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.scale-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.scale-descriptions {
  display: flex;
  justify-content: space-between;
}

.scale-desc {
  font-size: 22rpx;
  color: #999;
}

.pain-level-display {
  text-align: center;
  padding: 24rpx;
  background: rgba(22, 119, 255, 0.05);
  border-radius: 16rpx;
}

.pain-number {
  font-size: 72rpx;
  font-weight: 700;
  color: #1677ff;
  display: block;
  margin-bottom: 8rpx;
}

.pain-description {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 身体部位选择 */
.body-map {
  width: 100%;
}

.body-areas {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.body-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.body-area:active {
  transform: translateY(2rpx);
}

.body-area.selected {
  border-color: #1677ff;
  background: rgba(22, 119, 255, 0.1);
}

.area-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.area-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.body-area.selected .area-name {
  color: #1677ff;
  font-weight: 500;
}

/* 持续时间选项 */
.duration-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-item {
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.option-item:active {
  transform: translateY(1rpx);
}

.option-item.selected {
  border-color: #1677ff;
  background: rgba(22, 119, 255, 0.1);
}

.option-text {
  font-size: 28rpx;
  color: #333;
}

.option-item.selected .option-text {
  color: #1677ff;
  font-weight: 500;
}

/* 触发因素 */
.trigger-factors {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.factor-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.factor-item:active {
  transform: translateY(1rpx);
}

.factor-item.selected {
  border-color: #1677ff;
  background: rgba(22, 119, 255, 0.1);
}

.factor-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.factor-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.factor-item.selected .factor-text {
  color: #1677ff;
  font-weight: 500;
}

/* 疼痛性质 */
.pain-qualities {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.quality-item {
  padding: 16rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.quality-item:active {
  transform: translateY(1rpx);
}

.quality-item.selected {
  border-color: #1677ff;
  background: rgba(22, 119, 255, 0.1);
}

.quality-text {
  font-size: 26rpx;
  color: #333;
}

.quality-item.selected .quality-text {
  color: #1677ff;
  font-weight: 500;
}

/* 情绪量表 */
.emotion-scale {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.emotion-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.emotion-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  width: 120rpx;
}

.emotion-slider {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}

.emotion-slider slider {
  flex: 1;
  margin-right: 16rpx;
}

.emotion-value {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: 600;
  width: 40rpx;
  text-align: center;
}

/* 提交区域 */
.submit-section {
  padding: 32rpx 20rpx 60rpx;
  text-align: center;
}

.submit-btn {
  background: linear-gradient(135deg, #1677ff, #1890ff);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.3);
  border: none;
  width: 100%;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.4);
}

.submit-btn[disabled] {
  background: #d9d9d9;
  color: #999;
  box-shadow: none;
  transform: none;
}

.submit-note {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 16rpx;
  display: block;
}
