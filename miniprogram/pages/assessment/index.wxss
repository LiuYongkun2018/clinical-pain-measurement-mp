  min-height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quality-item:hover {
  border-color: #d1d1d1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.quality-item:active {
  transform: translateY(1rpx);
}

.quality-item.selected {
  border-color: #1677ff !important;
  background: rgba(22, 119, 255, 0.12) !important;
  box-shadow: 0 6rpx 20rpx rgba(22, 119, 255, 0.25) !important;
  transform: scale(1.04);
}

.quality-item.selected::after {
  content: '✓';
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  color: #1677ff;
  font-size: 22rpx;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  animation: checkmark-appear 0.3s ease-out;
}

.quality-text {
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
