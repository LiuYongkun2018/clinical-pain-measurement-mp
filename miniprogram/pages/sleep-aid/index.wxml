<!--pages/sleep-aid/index.wxml-->
<view class="container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <text class="header-title">音视频助眠</text>
    <text class="header-subtitle">放松身心，安然入睡</text>
  </view>

  <!-- 介绍区域 -->
  <view class="intro-section">
    <text class="intro-text">精选自然音与助眠曲，帮助你缓解压力，营造舒适睡眠环境</text>
  </view>

  <scroll-view 
    scroll-y 
    class="content-area" 
    show-scrollbar="{{false}}"
    enhanced="{{true}}"
    bounces="{{false}}"
  >
    <!-- 自然音模块 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">自然音</text>
        <text class="view-all">查看全部 ></text>
      </view>
      
      <!-- 两行三列的卡片布局 -->
      <view class="nature-grid">
        <view 
          class="nature-card" 
          wx:for="{{natureList}}" 
          wx:key="id"
          bindtap="onNatureCardTap"
          data-item="{{item}}"
        >
          <image class="card-bg" src="{{item.coverImage}}" mode="aspectFill" />
          <view class="card-overlay"></view>
          <view class="card-content">
            <text class="card-title">{{item.title}}</text>
            <view class="play-btn" catchtap="onPlayNature" data-id="{{item.id}}">
              <image class="play-icon" src="/images/icons/play.svg" />
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 助眠曲模块 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">助眠曲</text>
        <text class="view-all">查看全部 ></text>
      </view>
      
      <!-- 每行一个卡片的布局 -->
      <view class="sleep-list">
        <view 
          class="sleep-card" 
          wx:for="{{sleepList}}" 
          wx:key="id"
          bindtap="onSleepCardTap"
          data-item="{{item}}"
        >
          <image class="card-bg" src="{{item.coverImage}}" mode="aspectFill" />
          <view class="card-overlay"></view>
          <view class="card-content">
            <view class="text-info">
              <text class="card-title">{{item.title}}</text>
              <text class="card-desc">{{item.description}}</text>
            </view>
            <view class="play-btn-large" catchtap="onPlaySleep" data-id="{{item.id}}">
              <image class="play-icon-large" src="/images/icons/play.svg" />
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
