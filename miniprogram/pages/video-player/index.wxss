page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  /* 适配安全区域 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.video-player-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  /* 底部安全区域 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
}

.video-player-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><radialGradient id="a" cx="50%" cy="50%" r="50%"><stop offset="0%" stop-color="%23ffffff" stop-opacity="0.1"/><stop offset="100%" stop-color="%23ffffff" stop-opacity="0"/></radialGradient></defs><circle cx="20" cy="20" r="20" fill="url(%23a)"/><circle cx="80" cy="30" r="15" fill="url(%23a)"/><circle cx="40" cy="70" r="25" fill="url(%23a)"/><circle cx="90" cy="80" r="18" fill="url(%23a)"/></svg>');
  opacity: 0.3;
  pointer-events: none;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-sizing: border-box;
  height: auto;
  padding-bottom: 24rpx;
}

.navbar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, transparent 100%);
  backdrop-filter: blur(10rpx);
}

.navbar-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
}

.back-button,
.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-icon-wrapper,
.share-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.back-button:active .back-icon-wrapper,
.share-button:active .share-icon-wrapper {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.share-icon {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin: 0 32rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.navbar-actions {
  width: 64rpx;
}

/* 视频播放器 */
.video-wrapper {
  position: relative;
  width: 100%;
  height: 420rpx;
  background: #000;
  margin-top: 160rpx; /* 为导航栏留出空间 */
}

.video-player {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.video-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 视频信息区域 */
.video-info-section {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  margin: 2rpx 16rpx 0;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.video-title-section {
  margin-bottom: 32rpx;
}

.video-main-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.video-stats {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 24rpx;
}

.video-duration,
.video-views,
.video-category {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
}

.video-category {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

/* 视频描述 */
.video-description {
  margin-bottom: 48rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.description-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.description-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.expand-button {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.expand-button:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.1);
}

.expand-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.expand-icon {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.description-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  max-height: 120rpx;
  overflow: hidden;
  transition: max-height 0.3s ease;
  white-space: pre-line;
}

.description-content.expanded {
  max-height: 1000rpx;
}

/* 相关推荐 */
.related-videos {
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-top: 32rpx;
  margin-top: 32rpx;
}

.related-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.related-list {
  white-space: nowrap;
}

.related-item {
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  vertical-align: top;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.related-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.related-poster {
  width: 100%;
  height: 135rpx;
  object-fit: cover;
}

.related-video-title {
  display: block;
  padding: 16rpx 16rpx 8rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.related-duration {
  display: block;
  padding: 0 16rpx 16rpx;
  font-size: 20rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .video-wrapper {
    height: 380rpx;
  }
  
  .video-info-section {
    padding: 24rpx;
  }
  
  .video-main-title {
    font-size: 32rpx;
  }
  
  .related-item {
    width: 200rpx;
  }
}

/* 挖孔屏适配 */
@supports (top: constant(safe-area-inset-top)) or (top: env(safe-area-inset-top)) {
  page {
    padding-top: constant(safe-area-inset-top);
    padding-top: env(safe-area-inset-top);
  }
  
  .custom-navbar {
    padding-top: calc(constant(safe-area-inset-top) + 24rpx);
    padding-top: calc(env(safe-area-inset-top) + 24rpx);
  }
  
  .video-wrapper {
    margin-top: calc(160rpx + constant(safe-area-inset-top));
    margin-top: calc(160rpx + env(safe-area-inset-top));
  }
}
