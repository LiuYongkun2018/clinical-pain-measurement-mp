/* 页面容器 */
.tools-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #1677ff;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: white;
}

/* 工具内容 */
.tool-content {
  min-height: 600rpx;
}

.section-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 12rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 音频列表 */
.audio-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.audio-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.audio-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.audio-cover {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1677ff, #40a9ff);
}

.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  font-size: 24rpx;
  color: #1677ff;
}

.audio-info {
  flex: 1;
}

.audio-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.audio-description {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.audio-duration {
  font-size: 24rpx;
  color: #1677ff;
  font-weight: 500;
}

/* 添加日志卡片 */
.add-log-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 2rpx dashed #1677ff;
  border-radius: 20rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.add-log-card:active {
  background: rgba(22, 119, 255, 0.05);
}

.add-icon {
  font-size: 48rpx;
  color: #1677ff;
  margin-bottom: 16rpx;
}

.add-text {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: 500;
}

/* 情绪日志列表 */
.emotion-logs {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.log-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.log-date {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.emotion-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.emotion-indicator.good {
  background: #52c41a;
}

.emotion-indicator.neutral {
  background: #faad14;
}

.emotion-indicator.bad {
  background: #ff4d4f;
}

.log-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.log-mood {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.log-note {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 放松技巧 */
.relaxation-techniques {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.technique-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.technique-card:active {
  transform: translateY(2rpx);
}

.technique-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.technique-info {
  flex: 1;
}

.technique-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.technique-description {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.technique-duration {
  font-size: 24rpx;
  color: #1677ff;
  font-weight: 500;
}

.technique-arrow {
  font-size: 32rpx;
  color: #1677ff;
  margin-left: 16rpx;
}

/* 音频播放器 */
.audio-player {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 1000;
}

.audio-player.show {
  transform: translateY(0);
}

.player-content {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.player-info {
  flex: 1;
  margin-right: 24rpx;
}

.player-title {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}

.player-time {
  font-size: 24rpx;
  color: #666;
}

.player-controls {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #1677ff;
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.player-progress {
  padding: 0 24rpx 24rpx;
}

.progress-bar {
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #1677ff;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}
