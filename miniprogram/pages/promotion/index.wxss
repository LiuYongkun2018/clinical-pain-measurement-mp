/* pages/promotion/index.wxss */

.container {
  padding: 40rpx 30rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  width: 100vw;
}

.form-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.form-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.form-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

.form-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.1);
  width: 100%;
  margin: 0 16rpx;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
  width: 100%;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 48rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.submitting {
  background: #cccccc;
  box-shadow: none;
  transform: none;
}

.submit-btn[disabled] {
  background: #cccccc !important;
  box-shadow: none !important;
  transform: none !important;
}

.btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 输入框占位符样式 */
.form-input::placeholder,
.form-textarea::placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx 15rpx;
  }
  
  .form-container {
    padding: 40rpx 30rpx;
  }
  
  .form-title {
    font-size: 42rpx;
  }
  
  .label {
    font-size: 30rpx;
  }
  
  .form-input,
  .form-textarea {
    font-size: 28rpx;
  }
}