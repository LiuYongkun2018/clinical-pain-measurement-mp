/* pages/profile/index.wxss */
.container {
  padding: 40rpx 30rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  width: 100vw;
  padding-bottom: 40rpx;
}

.profile-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 20rpx 30rpx 20rpx;
  background: transparent;
  border-radius: 0;
  box-shadow: none;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

/* 登录部分 */
.login-section {
  margin-top: 100rpx;
}

.login-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.1);
  margin: 0 16rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2));
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  background: rgba(255, 255, 255, 0.25);
}

.login-btn.loading {
  background: rgba(204, 204, 204, 0.3);
  box-shadow: none;
}

.login-btn[disabled] {
  background: rgba(204, 204, 204, 0.3) !important;
  box-shadow: none !important;
}

.login-btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 700;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 用户信息部分 */
.profile-content {
  margin-top: 20rpx;
}

.user-card {
  background: transparent;
  border-radius: 0;
  padding: 40rpx 20rpx;
  margin-bottom: 40rpx;
  box-shadow: none;
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  position: relative;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 16rpx;
  word-break: break-all;
  line-height: 1.4;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.copy-btn {
  position: absolute;
  right: 0;
  top: 50rpx;
  background: #f8f9fa;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
}

.copy-text {
  font-size: 24rpx;
  color: #667eea;
}

/* 功能菜单 */
.menu-section,
.stats-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 30rpx;
  padding-left: 8rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.menu-list {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  gap: 24rpx;
  transition: all 0.3s ease;
  background: transparent;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: rgba(255, 255, 255, 0.1);
  transform: translateY(2rpx);
}

.menu-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

.menu-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.menu-arrow {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

/* 使用统计 */
.stats-grid {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 退出登录 */
.logout-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.25);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.logout-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.2) 0%, rgba(255, 142, 83, 0.2) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.logout-btn:active {
  transform: translateY(2rpx);
  background: rgba(255, 255, 255, 0.18);
}

.logout-btn:active::before {
  opacity: 1;
}

.logout-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}
