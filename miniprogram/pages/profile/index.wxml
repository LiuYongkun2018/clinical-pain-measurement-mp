<view class="profile-container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <!-- 用户基本信息 -->
    <view class="user-header">
      <view class="user-avatar">
        <image class="avatar-image" src="{{userInfo.avatarUrl || '/images/icons/avatar.png'}}" mode="aspectFill"></image>
      </view>
      <view class="user-info">
        <text class="user-name">{{userInfo.nickName || '用户'}}</text>
        <text class="user-level">疼痛管理 {{userLevel}} 级</text>
      </view>
      <!-- <view class="edit-button" bindtap="editProfile">
        <text class="edit-text">编辑</text>
      </view> -->
    </view>
    
    <!-- 数据统计 -->
    <view class="user-stats">
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-number">{{userStats.totalDays}}</text>
          <text class="stat-label">使用天数</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{userStats.assessments}}</text>
          <text class="stat-label">评估次数</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{userStats.completedCourses}}</text>
          <text class="stat-label">完成课程</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{userStats.mindfulnessMinutes}}</text>
          <text class="stat-label">正念时长(分)</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 疼痛趋势图表 -->
  <view class="chart-section">
    <view class="chart-header">
      <text class="chart-title">疼痛趋势</text>
      <view class="chart-tabs">
        <text class="chart-tab {{chartPeriod === '7d' ? 'active' : ''}}" bindtap="switchChartPeriod" data-period="7d">7天</text>
        <text class="chart-tab {{chartPeriod === '30d' ? 'active' : ''}}" bindtap="switchChartPeriod" data-period="30d">30天</text>
      </view>
    </view>
    <view class="chart-container">
      <canvas class="chart-canvas" canvas-id="profilePainChart" id="profilePainChart"></canvas>
      <view class="chart-summary" wx:if="{{painTrendData && painTrendData.length > 0}}">
        <view class="summary-item">
          <text class="summary-label">平均疼痛度</text>
          <text class="summary-value">{{averagePain}}</text>
        </view>
        <view class="summary-item">
          <text class="summary-label">{{chartPeriod === '7d' ? '7天' : '30天'}}变化</text>
          <text class="summary-value {{painTrend > 0 ? 'trend-up' : (painTrend < 0 ? 'trend-down' : 'trend-stable')}}">
            {{painTrend > 0 ? '+' : ''}}{{painTrend.toFixed(1)}}
          </text>
        </view>
      </view>
      <view class="chart-placeholder" wx:else>
        <view class="placeholder-icon">📊</view>
        <text class="placeholder-text">暂无疼痛数据</text>
        <text class="placeholder-desc">开始记录疼痛以查看趋势</text>
      </view>
    </view>
  </view>

  <!-- 成就系统 -->
  <view class="achievements-section">
    <view class="section-title">我的成就</view>
    <view class="achievements-grid">
      <view 
        class="achievement-item {{item.unlocked ? 'unlocked' : 'locked'}}"
        wx:for="{{achievements}}"
        wx:key="id"
      >
        <view class="achievement-icon">{{item.icon}}</view>
        <view class="achievement-info">
          <text class="achievement-name">{{item.name}}</text>
          <text class="achievement-desc">{{item.description}}</text>
        </view>
        <view class="achievement-status">
          <text class="status-text">{{item.unlocked ? '已获得' : '未获得'}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 设置选项 -->
  <view class="settings-section">
    <view class="section-title">设置</view>
    <view class="settings-list">
      <view class="setting-item" bindtap="exportData">
        <view class="setting-icon">📥</view>
        <text class="setting-text">数据导出</text>
        <view class="setting-arrow">></view>
      </view>
      
      <view class="setting-item" bindtap="remindSettings">
        <view class="setting-icon">🔔</view>
        <text class="setting-text">提醒设置</text>
        <view class="setting-arrow">></view>
      </view>
      
      <view class="setting-item" bindtap="privacySettings">
        <view class="setting-icon">🔒</view>
        <text class="setting-text">隐私设置</text>
        <view class="setting-arrow">></view>
      </view>
      
      <view class="setting-item" bindtap="aboutApp">
        <view class="setting-icon">ℹ️</view>
        <text class="setting-text">关于应用</text>
        <view class="setting-arrow">></view>
      </view>
      
      <view class="setting-item" bindtap="feedback">
        <view class="setting-icon">💬</view>
        <text class="setting-text">意见反馈</text>
        <view class="setting-arrow">></view>
      </view>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section">
    <view class="logout-button" bindtap="logout">
      <text class="logout-text">退出登录</text>
    </view>
  </view>
</view>
