/* 页面容器 */
.training-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 标题区域 */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.main-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.tab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.tab-item.active .tab-text {
  color: white;
}

/* 训练区块 */
.training-section {
  margin-bottom: 32rpx;
}

.section-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 课程网格 */
.course-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.course-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.course-card.completed {
  border: 2rpx solid #52c41a;
  background: rgba(82, 196, 26, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-icon {
  font-size: 48rpx;
}

.completion-badge {
  width: 32rpx;
  height: 32rpx;
  background: #52c41a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.card-content {
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.course-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  margin-bottom: 12rpx;
}

.course-meta {
  display: flex;
  gap: 16rpx;
}

.duration, .difficulty {
  font-size: 22rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
}

.progress-bar {
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1677ff, #40a9ff);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

/* 学习统计 */
.stats-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-header {
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.stats-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: rgba(22, 119, 255, 0.05);
  border-radius: 12rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #1677ff;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.weekly-progress {
  margin-top: 24rpx;
}

.progress-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.progress-chart {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.day-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  background: #d9d9d9;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.progress-dot.completed {
  background: #52c41a;
}

.day-label {
  font-size: 20rpx;
  color: #999;
}

/* 推荐课程 */
.recommendation-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.rec-header {
  margin-bottom: 20rpx;
}

.rec-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.rec-subtitle {
  font-size: 24rpx;
  color: #666;
}

.rec-course {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.rec-course:last-child {
  border-bottom: none;
}

.rec-course:active {
  background: rgba(22, 119, 255, 0.05);
  margin: 0 -24rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.rec-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.rec-content {
  flex: 1;
}

.rec-course-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.rec-reason {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.rec-arrow {
  font-size: 24rpx;
  color: #1677ff;
  margin-left: 16rpx;
}
